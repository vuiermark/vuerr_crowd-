<div class="container">
<%= form_for(@project) do |f| %>
	<%= render 'shared/errors', object: @project %>
	<div class="form-group">
		<%= f.label :name %><br/>
		<%= f.text_field :name, autofocus: true, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :brief_description %><br/>
		<%= f.text_area :description, cols: 40, rows: 3, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :YouTube_Channel %><br/>
		<%= f.text_field :youtube_channel, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :Campaign_Title %><br/>
		<%= f.text_field :title, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :Funding_goal %><br/>
		<%= f.number_field :funding_goal, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :Monthly_funding_goal %><br/>
		<%= f.number_field :monthly_funding_goal, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :Campaign_Deadline %><br/>
		<%= f.date_select :deadline, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :Detailed_description %><br/>
		<%= f.text_area :long_description, cols: 40, rows: 10, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :City %><br/>
		<%= f.text_field :city, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :Country %><br/>
		<%= f.text_field :country, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :image_file_name %><br/>
		<%= f.text_field :image_file_name, size: 30, placeholder: "GIF, JPG, or PNG file name", class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :Youtube_embed_tag_or_Youtube_url %><br/>
		<%= f.text_area :video, cols: 40, rows: 3, placeholder: "<iframe width='853' height='480' src='//www.youtube.com/embed/ZswBrczc2rI' frameborder='0' allowfullscreen></iframe>", class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :Check_to_feature_video %><br/>
		<%= f.check_box :featured, {}, "true", "false" %>
	</div>
	<div class="form-group">
		<%= f.submit class: "btn btn-success" %> | 
		<%= link_to "Cancel", projects_path, class: "btn btn-danger" %>
	</div>

	<% end %>
	<div> <!-- container -->
	