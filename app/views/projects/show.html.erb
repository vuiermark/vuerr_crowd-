<div class="container">
	<div class="row">
	  <div class="col-md-offset-1 col-md-10">
	    <div class="panel panel-default center">
	      <div class="panel-body">
	      	<div class="youtube">
	      	<%= raw(youtube_embed(@project.video)) %></div>
					<h3><%= @project.name %></h3>
					<p><%= @project.long_description %></p>
				</div>
				<div class="panel-heading center">
					<div class="progress">
	          <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: <%= @project.percentage_funded %>">
	          </div>
	        </div>
	        <span><%= @project.percentage_funded %><strong> Funded |</strong>
	        	<%= number_to_currency(@project.total_amount_pledged) %> <strong> Pledged </strong> |
          <%= number_to_currency(@project.funding_goal) %><strong> Goal |</strong>
          <%= format_deadline(@project) %></span>
					<div class="left-justify">
						<h4>You Tube Channel: </h4>
						<p><%= @project.youtube_channel %></p>
		
						<h4>Campaign Title: </h4>
						<p><%= @project.title %></p>
		
						<h4>Funding Goal: </h4>
						<p><%= number_to_currency(@project.funding_goal) %></p>
		
						<h4>Monthly Funding Goal:</h4> 
						<p><%= number_to_currency(@project.monthly_funding_goal) %></p>
					
						<h4>Country: </h4>
						<p><%= @project.country %></p>
					
						<h4>City:</h4>
						<p><%= @project.city %></p>
				
						<h4>Deadline:</h4>
						<p><%= format_deadline(@project) %></p>
					
						<h4>Detailed Description:</h4>
						<p><%= @project.long_description %></p>
					
						<div class="center">

				       <%= pledge_link_for(@project)%>

				    </div>
				  </div> <!-- panel-heading center -->
				</div> <!-- panel-body -->
			</div> <!-- panel panel-default center -->
		</div> <!-- col-md-offset-2 col-md-8 -->
	</div> <!-- row -->
	<br/>
	<%= link_to "All Projects", root_path %> |
	<%# if @project.user == current_user %>
		<%= link_to "Edit", edit_project_path(@project) %> |
		<%= link_to "Delete", project_path(@project), method: :delete, data: { confirm: "Are you sure?" } %>
	<%# end %>
</div> <!-- container -->
