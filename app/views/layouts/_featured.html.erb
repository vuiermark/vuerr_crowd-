<h2>Campaigns we're diggin'</h2>

<div class="line">
</div>
	
	<% @projects.featured_campaign.each do |project| %>
		<div class="box panel panel-default">
			<div class="feature-image">
				<%= link_to image_for(project), project %>
			</div>
			<div class="feature-name"><h4><%= link_to project.name, project %></h4>
			</div>
			<div class="feature-funding-info">Deadline:
				<%= format_deadline(project) %>
			</div>
			<div class="panel-body">
				<div class="feature-description">
					<%= project.description %>
				</div>
				<div class="panel-heading center">
					<div class="progress">
	          <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: <%= project.percentage_funded %>">
	          </div>
	        </div>

	        <div class="feature-description">
	        	<strong><%= project.percentage_funded %> Funded</strong>
					</div>
					<div class="feature-description">
						<strong>Funding Goal: </strong>
						<%= number_to_currency(project.funding_goal) %>
					</div>
					<div class="feature-description">
						<strong>Monthly Funding Goal: </strong>
							<%= number_to_currency(project.monthly_funding_goal) %>
					</div>
					<div class="feature-description">
						<strong>Total Raised: </strong>
							<%= number_to_currency(project.total_amount_pledged) %>
					</div>
			</div> <!-- panel-heading center -->
		</div> <!-- panel-body -->
	</div> <!-- box panel pane -->
<% end %>



